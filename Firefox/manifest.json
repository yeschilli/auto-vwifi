{
	"manifest_version": 3,
	"name": "Auto VIT Wi-Fi",
	"version": "1.2",
	"description": "Never login to VIT Wi-Fi again! This extension automatically logs you into VIT's network portal",
	"icons": {
		"16": "assets/vwifi16.png",
		"48": "assets/vwifi48.png",
		"128": "assets/vwifi128.png"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": [
				"http://phc.prontonetworks.com/*",
				"https://phc.prontonetworks.com/*"
			],
			"js": ["login.js"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["font/*.woff2"],
			"matches": ["<all_urls>"]
		}
	],
	"permissions": [
		"storage",
		"notifications",
		"webRequest",
		"webRequestBlocking"
	],
	"action": {
		"default_icon": "assets/vwifi48.png",
		"default_popup": "popup.html"
	},
	"host_permissions": [
		"http://phc.prontonetworks.com/*",
		"https://phc.prontonetworks.com/*"
	],
	"author": "NoChilli",
	"homepage_url": "https://nochilli.github.io/auto-vwifi/",
	"browser_specific_settings": {
		"gecko": {
			"id": "auto-vwifi@nochilli.xyz"
		}
	},
	"options_ui": {
		"page": "popup.html"
	}
}
